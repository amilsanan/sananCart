    function changeQuantity(cartId, proId, price, count) {
      

        let quantity = parseInt(document.getElementById(proId).innerHTML)

        count = parseInt(count)

        $.ajax({
            url: '/change-quantity',
            data: {
                // user: userId,
                cart: cartId,
                product: proId,
                count: count,
                quantity: quantity
            },
            method: 'post',
            success: (response) => {                
                    document.getElementById(proId).innerHTML = quantity + count         //quantity
                    j = quantity + count
                    document.getElementById('total' + proId).innerHTML = 'Rs.' + j * price //price total

