<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        {{#each cartItems}}
                        <tbody>
                            <tr>
                                <td class="product__cart__item">
                                    <div class="product__cart__item__pic">
                                        <img src="/product-images/{{this.product._id}}.jpg" width="80" height="100"
                                            alt="">
                                    </div>
                                    <div class="product__cart__item__text">
                                        <h6>{{this.product.Name}}</h6>
                                        <h5>Rs: {{this.product.price}}</h5>

                                    </div>
                                </td>
                                <td>
                                    <button
                                        class=" button-minus border rounded-circle icon-shape icon-sm cart-item-count mr-3"
                                        onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{this.product.price}}',-1)"
                                        id="disable{{this.product._id}}" disabled="false">-</button>

                                    <span id="{{this.product._id}}">{{this.quantity}}</span>

                                    <button
                                        class="button-minus border rounded-circle icon-shape icon-sm cart-item-count mr-3"
                                        onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{this.product.price}}',1)">+</button>
                                </td>
                                <td class="cart__price" id="total{{this.product._id}}">Rs.{{this.product.price}}</td>
                                <td class="cart__close"><a href="/deleteproductcart/{{this.product._id}}"
                                        onclick="return confirm ('delete{{this.name}}?')"><i
                                            class="fa fa-close"></i></a></td>
                            </tr>

                        </tbody>
                        {{/each}}
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn">
                            <a href="#">Continue Shopping</a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn update__btn">
                            <a href="#"><i class="fa fa-spinner"></i> Update cart</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart__discount">
                    <h6>Discount codes</h6>
                    <form  id="couponcode"> 
                        <input type="text" name="couponcode" placeholder="Coupon code">
                        <button type="submit" >Apply</button>
                    </form>
                </div>
                <div class="cart__total">
                    <h6>Cart total</h6>
                    <ul>
                        <li>Subtotal <span id="subtotal">{{totalvalue}}</span></li>
                        <li>coupon discount <span id="cou"></span></li>
                        <li>Total <span id="total">Rs. {{totalvalue}}</span></li>
                    </ul>
                    <a href="/checkout" class="primary-btn">Proceed to checkout</a>
                </div>
            </div>
        </div>
    </div>
